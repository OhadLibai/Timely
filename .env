# ===================================================================
# UNIFIED ENVIRONMENT CONFIGURATION FOR TIMELY
# ===================================================================

# -------------------------
# GENERAL APP CONFIG
# -------------------------
NODE_ENV=development
APP_NAME=Timely
APP_VERSION=1.0.0

# -------------------------
# SECURITY & AUTH
# -------------------------
JWT_SECRET=your-super-secret-jwt-key-for-dev-that-is-at-least-32-chars
JWT_REFRESH_SECRET=your-super-secret-jwt-refresh-key-for-dev-that-is-32-chars
JWT_ACCESS_TOKEN_EXPIRY=8h
JWT_ALGORITHM=HS256
BCRYPT_ROUNDS=12

# -------------------------
# DATABASE CONFIG
# -------------------------
POSTGRES_USER=timely_user
POSTGRES_PASSWORD=timely_password
POSTGRES_DB=timely_db
DB_HOST=database
DB_PORT=5432
DATABASE_URL=postgresql://timely_user:timely_password@database:5432/timely_db

# -------------------------
# SERVICE PORTS
# -------------------------
FRONTEND_PORT=3000
BACKEND_PORT=5000
ML_SERVICE_PORT=8000
DB_EXPOSED_PORT=5432

# -------------------------
# SERVICE URLS
# -------------------------
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://backend:5000
VITE_API_URL=http://localhost:5000/api
ML_SERVICE_URL=http://ml-service:8000

# -------------------------
# ML SERVICE CONFIG
# -------------------------
# Data paths
DATASET_PATH=/app/dataset
CACHE_PATH=/app/data/cache
RAW_DATA_PATH=/app/dataset
JSON_DATA_PATH=/app/data/cache

# Evaluation settings
EVALUATION_SAMPLE_SIZE=100
EVALUATION_CACHE_TTL=3600

# Performance settings
MAX_WORKERS=4
REQUEST_TIMEOUT=300
CACHE_ENABLED=true

# -------------------------
# API RATE LIMITING
# -------------------------
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# -------------------------
# LOGGING
# -------------------------
LOG_LEVEL=INFO
LOG_FORMAT=json

# -------------------------
# SECURITY SETTINGS
# -------------------------
MIN_PASSWORD_LENGTH=8
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# -------------------------
# DEVELOPMENT SETTINGS
# -------------------------
DEBUG=false
ENVIRONMENT=development

# -------------------------
# FEATURE FLAGS
# -------------------------
ENABLE_ASYNC_EVALUATION=true
ENABLE_DB_PREDICTIONS=true
ENABLE_METRICS_ENDPOINT=true