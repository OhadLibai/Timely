# ===================================================================
# UNIFIED ENVIRONMENT CONFIGURATION FOR TIMELY
# ===================================================================

# -------------------------
# GENERAL APP CONFIG
# -------------------------
NODE_ENV=development
APP_NAME=Timely
APP_VERSION=1.0.0

# -------------------------
# DEVELOPMENT SETTINGS
# -------------------------
DEBUG=false
ENVIRONMENT=development
LOG_LEVEL=INFO

# -------------------------
# SECURITY & AUTH
# -------------------------
JWT_SECRET=your-super-secret-jwt-key-for-dev-that-is-at-least-32-chars
JWT_REFRESH_SECRET=your-super-secret-jwt-refresh-key-for-dev-that-is-32-chars
JWT_ACCESS_TOKEN_EXPIRY=24h

# -------------------------
# SERVICE PORTS
# -------------------------
FRONTEND_PORT=3000
BACKEND_PORT=5000
ML_SERVICE_PORT=8000
DB_EXPOSED_PORT=5432

# -------------------------
# DATABASE CONFIG
# -------------------------
POSTGRES_USER=timely_user
POSTGRES_PASSWORD=timely_password
POSTGRES_DB=timely_db
DB_HOST=database
DB_PORT=5432
DATABASE_URL=postgresql://user:password@database:5432/timely_db

# -------------------------
# SERVICE URLS
# -------------------------
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://backend:5000
VITE_API_URL=http://localhost:5000/api
ML_SERVICE_URL=http://ml-service:8000

# -------------------------
# ML SERVICE CONFIG
# -------------------------
# Data paths
DATASET_PATH=/app/dataset
DATA_PATH=/app/data # Jsons

# ML Model Configuration
TIFUKNN_NEIGHBORS=900
TIFUKNN_WITHIN_DECAY=0.9
TIFUKNN_GROUP_DECAY=0.7
TIFUKNN_SEQUENTIAL_DECAY=0.9
TIFUKNN_GROUP_SIZE=3
TIFUKNN_TOP_K=20

# Evaluation settings
EVALUATION_RANDOM_SEED=42
EVALUATION_SAMPLE_SIZE=100 # Just omit if want to evaluate on everybody

# -------------------------
# API RATE LIMITING
# -------------------------
RATE_LIMIT_WINDOW_MS=900000