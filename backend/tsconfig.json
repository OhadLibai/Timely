{
  "compilerOptions": {
    "target": "ES2020",                       // Or a newer ECMAScript target like ES2021, ES2022
    "module": "commonjs",                     // Standard for Node.js
    "rootDir": "./src",                       // Where your source .ts files are
    "outDir": "./dist",                       // Where compiled .js files will go
    "esModuleInterop": true,                  // Enables compatibility with CommonJS modules
    "forceConsistentCasingInFileNames": true, // Ensures case-sensitive import correctness
    "strict": true,                           // Enables all strict type-checking options
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,                     // Skips type checking of declaration files
    "resolveJsonModule": true,                // Allows importing JSON files
    "moduleResolution": "node",               // How modules are resolved
    "sourceMap": true,                        // Generates source maps for debugging
    "baseUrl": ".",                           // Base directory for module resolution
    "paths": {
      "@/*": ["src/*"]                        // Optional: Path aliases
    }
  },
  "include": ["src/**/*.ts"],                 // Which files to include in compilation
  "exclude": ["node_modules", "dist", "src/tests"] // Which files/folders to exclude
}