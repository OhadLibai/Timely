// backend/package.json - Required Scripts Section
{
  "scripts": {
    // ✅ REQUIRED: Development script with hot reload
    "dev": "nodemon --exec ts-node -r tsconfig-paths/register src/server.ts",
    
    // ✅ Alternative: If using ts-node-dev
    // "dev": "ts-node-dev --respawn --transpile-only --ignore-watch node_modules src/server.ts",
    
    // ✅ Build script for production
    "build": "tsc",
    
    // ✅ Start script (production)
    "start": "node dist/server.js",
    
    // ✅ Type checking
    "type-check": "tsc --noEmit",
    
    // ✅ Development utilities
    "clean": "rm -rf dist",
    "lint": "eslint src --ext .ts",
    "test": "jest"
  },
  
  // ✅ REQUIRED: Development dependencies
  "devDependencies": {
    "nodemon": "^3.0.0",
    "ts-node": "^10.9.0", 
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.0.0",
    "@types/node": "^20.0.0"
    // ... other dev dependencies
  }
}

